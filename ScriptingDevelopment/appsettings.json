{
  // payroll backend
  "PayrollHttpConfiguration": {
    "BaseUrl": "https://localhost",
    "Port": 44354
  },

  // payroll scripting configuration
  "ScriptConfiguration": {
    // period date
    "PeriodDate": "2019-02-01T00:00:00.0Z",
    // evaluation date
    "EvaluationDate": "2019-03-31T00:00:00.0Z"
    // regulation date
    //"EvaluationDate": "2019-03-31T00:00:00.0Z"
  },

  // loger
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "HealthChecks": "Warning"
      }
    },
    "WriteTo": [
      {
        // async logger
        "Name": "Async",
        "Args": {
          "configure": [
            {
              // file logger
              "Name": "File",
              "Args": {
                "path": "%PROGRAMDATA%/PayrollEngine/ClientServiceTutorial/ScriptingDevelopment/logs/log.log1",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "buffered": false
              }
            }
          ]
        }
      }
    ]
  }
}
