{
  // payroll backend
  "PayrollHttpConfiguration": {
    "BaseUrl": "https://localhost",
    "Port": 44354
  },

  // loger
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "HealthChecks": "Warning"
      }
    },
    "WriteTo": [
      {
        // async logger
        "Name": "Async",
        "Args": {
          "configure": [
            {
              // file logger
              "Name": "File",
              "Args": {
                "path": "%PROGRAMDATA%/PayrollEngine/ClientServiceTutorial/ExtendedObjectModel/logs/log.log1",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "buffered": false
              }
            }
          ]
        }
      }
    ]
  }
}
